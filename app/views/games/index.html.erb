
<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Posted By</th>
      <th>Thumbnail</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Title</th>
      <th>Location</th>
      <th>Date listed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <h1> Hello <%= current_user.username %> </h1>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  <%= link_to('Change Details', edit_user_registration_path) %>
  <%= link_to('Pay me MONEHHH!', new_charge_path) %>

    <% @games.each do |game| %>
      <tr>
        <td><%= game.user.username %></td>
        <td><%= image_tag game.image.url(:thumb) %></td>
        <td><%= game.genre %></td>
        <td>$ <%= game.price %>.00</td>
        <td><%= game.title %></td>
        <td><%= game.location %></td>
        <td><%= game.date_listed %></td>
        <td><%= link_to 'Show', game %></td>
        <% if game.user == current_user %>
          <td><%= link_to 'Edit', edit_game_path(game) %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
