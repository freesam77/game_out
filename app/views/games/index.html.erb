<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Photo</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Date listed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.user %></td>
        <td><%= game.photo %></td>
        <td><%= game.genre %></td>
        <td><%= game.price %></td>
        <td><%= game.title %></td>
        <td><%= game.description %></td>
        <td><%= game.location %></td>
        <td><%= game.date_listed %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

