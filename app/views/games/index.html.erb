
<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Email</th>
      <th>Photo</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Date listed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <h1> Hello <%= current_user.email %> </h1>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>

    <% @games.each do |game| %>
      <tr>
        <td><%= game.user %></td>
        <td><%= game.user.email %></td>
        <td><%= game.photo %></td>
        <td><%= game.genre %></td>
        <td><%= game.price %></td>
        <td><%= game.title %></td>
        <td><%= game.description %></td>
        <td><%= game.location %></td>
        <td><%= game.date_listed %></td>
        <td><%= link_to 'Show', game %></td>
        <% if post.user == current_user %>
          <td><%= link_to 'Edit', edit_game_path(game) %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
