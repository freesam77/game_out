

<%= form_tag games_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Posted By</th>
      <th>Thumbnail</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Title</th>
      <th>Location</th>
      <th>Date listed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

 

  <% if user_session %>
    <h1> Hello <%= current_user.username %> </h1>
    <ul>
      <li> <%= link_to('Sign Out', destroy_user_session_path, method: :delete) %> </li>
      <li> <%= link_to('Change Details', edit_user_registration_path) %> </li>
      <li> <%= link_to('Subscribe for $5', new_charge_path) %> </li>
    </ul>
  <% else %>
    <h1> Hey there! </h1>
    <ul>
      <li> <%= link_to('Sign In', new_user_session_path) %> </li>
      <li> <%= link_to('Subscribe for $5', new_charge_path) %> </li>
    </ul>
  <% end %>

<%#= image_path game.image.url %>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.user.username %></td>
        <td><%= image_tag(game.image.small_thumb.url, alt: 'Image') if game.image?%></td>
        <td><%= game.genre %></td>
        <td>$ <%= game.price %>.00</td>
        <td><%= game.title %></td>
        <td><%= game.location %></td>
        <td><%= game.date_listed %></td>
        <td><%= link_to 'Show', game %></td>
        <% if game.user == current_user %>
          <td><%= link_to 'Edit', edit_game_path(game) %></td>
          <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
