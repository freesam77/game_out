<%# <div class="container"> %>
    <%= form_with(model: game, local: true, multipart: true ) do |form| %>
      <% if game.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

          <ul>
          <% game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %> 


      <div class="form-group field">
        <%= form.label :image %> </br>
        <%= form.file_field :image, 'class' => "form-control-file"%>
      </div>
      
      <div class="form-group field">
        <%= form.label :genre %> </br>
        <%= form.text_field :genre, 'class' => "form-control"%>
      </div>

      <div class="form-group field">
        <%= form.label :price %> </br>
        <%= form.number_field :price, class: :text_field, step: ".01", 'class' => "form-control"%>
        
      </div>

      <div class="form-group field">
        <%= form.label :title %> </br>
        <%= form.text_field :title, 'class' => "form-control"%>
      </div>

      <div class="form-group field">
        <%= form.label :description %> </br>
        <%= form.text_area :description, 'class' => "form-control"%>
      </div>

      <div class="form-group field">
        <%= form.label :location %> </br>
        <%= form.text_field :location, 'class' => "form-control"%>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
<%# </div> %>