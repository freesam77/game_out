<div class="container">
  <div class="row">

      <div class="col-md-6">
        <%= image_tag @game.image.url %>
      </div>

      <div class="col-md-6">
        <p> <strong>Posted by:</strong> <%= @game.user.username %> </p>
        <p> <strong>Genre:</strong> <%= @game.genre %> </p>
        <p> <strong>Price:</strong> $<%= @game.price %> </p>
        <p> <strong>Title:</strong> <%= @game.title %> </p>
        <p> <strong>Location:</strong> <%= @game.location %> </p>
        <p> <strong>Date listed:</strong> <%= @game.created_at.strftime("%d %b, %Y") %> </p>
        <% if @game.user == current_user %>
            <%= link_to '<button class="btn-default indexx">Edit</button>'.html_safe, edit_game_path(@game) %>
            <%= link_to '<button class="btn-danger indexx">Delete</button>'.html_safe, @game, method: :delete, data: { confirm: 'Think again?' } %>

        <% elsif user_session %>
            <%= link_to '<button class="btn-default indexx">Contact Seller</button>'.html_safe %> </br>
            <%= link_to '<button class="btn-warning indexx">Trade</button>'.html_safe %>
            <%= link_to '<button class="btn-success indexx">Purchase</button>'.html_safe %>
        <% else %>
            <%= link_to '<button class="btn-default indexx">Login for More Option</button>'.html_safe, new_user_session_path %>
        <% end %>

      </div>

  </div>
  <hr>
<p>
  <strong>Description:</strong> </br>
  <%= @game.description %>
</p>
<%= link_to '<button class="btn-default">Back</button>'.html_safe, games_path %>
</div>

